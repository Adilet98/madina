{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Должность</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.surname }}</td>
                <td>{{ teacher.firstname }}</td>
                <td>{{ teacher.lastname }}</td>
                <td>{{ teacher.position }}</td>
                <td>{{ teacher.category }}</td>
                <td>
                    <a href="{{ path('teacher_show', {'id': teacher.id}) }}">Показать</a>
                    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('teacher_new') }}">Создать</a>
{% endblock %}
