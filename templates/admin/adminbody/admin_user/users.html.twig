{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <h1>Пользователи</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Логин</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ roles[i]|join(', ') }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Показать</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>
                </td>
            </tr>
            {% set i = i + 1 %}
        {% else %}
            <tr>
                <td colspan="5">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Создать</a>
{% endblock %}
