{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Логин</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ roles|join(', ') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Вернуться к списку</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>

    {{ include('admin/adminbody/admin_user/_delete_form.html.twig') }}
{% endblock %}
