{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Отделение</th>
                <th>Форма обучения</th>
                <th>Класс</th>
                <th>Дата рождения</th>
                <th>Адрес</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.surname }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
                <td>{{ student.branch }}</td>
                <td>{{ student.shift }}</td>
                <td>{{ student.class }}</td>
                <td>{{ student.birth ? student.birth|date('Y-m-d') : '' }}</td>
                <td>{{ student.address }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}">Показать</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}">Создать</a>
{% endblock %}
