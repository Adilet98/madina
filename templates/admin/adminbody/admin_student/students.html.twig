{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <h1>Оқушылар</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Аты</th>
                <th>Әкесінің аты</th>
                <th>Оқу формасы</th>
                <th>Сынып</th>
                <th>Туған күні</th>
                <th>Адрес</th>
                <th>Әрекеттер</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.surname }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
                <td>{{ student.shift }}</td>
                <td>{{ student.groupName.name }}</td>
                <td>{{ student.birth ? student.birth|date('Y-m-d') : '' }}</td>
                <td>{{ student.address }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}">Көрсету</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}">Өңдеу</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Жазбалар табылған жоқ</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}">Құру</a>
{% endblock %}
