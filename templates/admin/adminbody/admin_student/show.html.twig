{% extends 'admin/admin_body.html.twig' %}

{% block adminbody %}
    <h1>Оқушы</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ student.surname }}</td>
            </tr>
            <tr>
                <th>Аты</th>
                <td>{{ student.firstname }}</td>
            </tr>
            <tr>
                <th>Әкесінің аты</th>
                <td>{{ student.lastname }}</td>
            </tr>
            <tr>
                <th>Оқу формасы</th>
                <td>{{ student.shift }}</td>
            </tr>
            <tr>
                <th>Сынып</th>
                <td>{{ student.groupName.name }}</td>
            </tr>
            <tr>
                <th>Туған күні</th>
                <td>{{ student.birth ? student.birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Адрес</th>
                <td>{{ student.address }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_student_index') }}">Кері қайту</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">Өңдеу</a>

    {{ include('admin/adminbody/admin_student/_delete_form.html.twig') }}
{% endblock %}
