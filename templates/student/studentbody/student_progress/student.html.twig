{% extends 'student/student_body.html.twig' %}

{% block studentbody %}
    <h1>Оқу үлгерімі</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Пәннің аты</th>
            <th>1-ші тоқсан</th>
            <th>2-ші тоқсан</th>
            <th>3-ші тоқсан</th>
            <th>4-ші тоқсан</th>
            <th>Жылдық</th>
            <th>Экзамен</th>
            <th>Қорытынды</th>
        </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.name }}</td>
                {% for grade in student.grades %}
                    {% if grade.subject.name == subject.name %}
                        <td>{{ grade.quarterOne }}</td>
                        <td>{{ grade.quarterTwo }}</td>
                        <td>{{ grade.quarterThree }}</td>
                        <td>{{ grade.quarterFour }}</td>
                        <td>{{ grade.year }}</td>
                        <td>{{ grade.exam }}</td>
                        <td>{{ grade.final }}</td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}