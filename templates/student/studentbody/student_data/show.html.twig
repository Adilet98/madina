{% extends 'student/student_body.html.twig' %}

{% block studentbody %}
    <h1>Оқушы</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Фамилия</th>
            <td>{{ student.surname }}</td>
        </tr>
        <tr>
            <th>Аты</th>
            <td>{{ student.firstname }}</td>
        </tr>
        <tr>
            <th>Әкесінің аты</th>
            <td>{{ student.lastname }}</td>
        </tr>
        <tr>
            <th>Оқу формасы</th>
            <td>{{ student.shift }}</td>
        </tr>
        <tr>
            <th>Сынып</th>
            <td>{{ student.groupName.name }}</td>
        </tr>
        <tr>
            <th>Туған күні</th>
            <td>{{ student.birth ? student.birth|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Адрес</th>
            <td>{{ student.address }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
