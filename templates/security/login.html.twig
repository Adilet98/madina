<form method="post">
    <h1 class="h6 mb-3 font-weight-normal">Логин мен парольды еңгізу қажет</h1>
    <label for="inputUsername">Логин</label>
    <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="mb-3 form-control" required autofocus>
    <label for="inputPassword">Пароль</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="mt-3 btn btn-primary" type="submit">
        Кіру
    </button>
</form>
